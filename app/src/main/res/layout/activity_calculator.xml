<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".CalculatorActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/card_elevation"
        app:title="@string/title_calculator"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:navigationIconTint="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Переключатель темы -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/themeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- История -->
    <TextView
        android:id="@+id/tvHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_medium"
        android:gravity="end"
        android:text=""
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/text_size_body_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/themeSwitch" />

    <!-- Результат -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:gravity="end"
        android:text="@string/calc_display_default"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/text_size_display"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHistory" />

    <!-- Секция кнопок -->
   <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:alignmentMode="alignMargins"
        app:columnCount="4"
        app:rowCount="5"
        app:useDefaultMargins="true"
        android:padding="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResult">

        <!-- Первая строка -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnC"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_clear"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPercent"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_percent"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDivide"
            style="@style/CalcButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_divide"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDel"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_backspace"
            app:layout_row="0"
            app:layout_column="3"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <!-- Вторая строка -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_seven"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_eight"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_nine"
            app:layout_row="1"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiply"
            style="@style/CalcButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_multiply"
            app:layout_row="1"
            app:layout_column="3"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <!-- Третья строка -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_four"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_five"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_six"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus"
            style="@style/CalcButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_minus"
            app:layout_row="2"
            app:layout_column="3"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <!-- Четвертая строка -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_one"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_two"
            app:layout_row="3"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_three"
            app:layout_row="3"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus"
            style="@style/CalcButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_plus"
            app:layout_row="3"
            app:layout_column="3"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <!-- Пятая строка -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlusMinus"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_plus_minus"
            app:layout_row="4"
            app:layout_column="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_zero"
            app:layout_row="4"
            app:layout_column="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDot"
            style="@style/CalcButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_decimal"
            app:layout_row="4"
            app:layout_column="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEquals"
            style="@style/CalcButtonOrange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_gravity="fill"
            android:text="@string/calc_equals"
            app:layout_row="4"
            app:layout_column="3"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>