<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TopacAdemy_android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_button_primary</item>
        <item name="colorPrimaryVariant">@color/dark_button_primary</item>
        <item name="colorOnPrimary">@color/dark_button_primary_text</item>
        <item name="colorPrimaryContainer">@color/dark_top_shape</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_button_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_button_secondary_border</item>
        <item name="colorOnSecondary">@color/dark_button_secondary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/dark_text_dark</item>
        <item name="android:textColorSecondary">@color/dark_text_medium</item>
        <item name="android:textColorHint">@color/dark_text_light</item>
        <item name="editTextColor">@color/dark_text_dark</item>
        <item name="colorAccent">@color/dark_link</item>
        <item name="colorSurface">@color/dark_bg</item>

        <!-- Custom styles -->
        <item name="buttonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/dark_button_primary</item>
        <item name="android:textColor">@color/dark_button_primary_text</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/dark_button_secondary_border</item>
        <item name="android:textColor">@color/dark_button_secondary_text</item>
        <item name="backgroundTint">@color/dark_button_secondary</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/dark_text_dark</item>
        <item name="android:textColorHint">@color/dark_text_light</item>
        <item name="backgroundTint">@color/dark_input_line</item>
    </style>

    <style name="TextAppearance.App.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/dark_text_dark</item>
    </style>

    <style name="TextAppearance.App.Body2.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/dark_text_medium</item>
    </style>

    <style name="TextAppearance.App.Caption.Dark" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/dark_text_light</item>
    </style>

    <style name="TextAppearance.App.Link.Dark" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/dark_link</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>